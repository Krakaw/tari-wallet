{
  "name": "tari-wasm-scanner-example",
  "version": "1.0.0",
  "description": "Node.js example for the Tari WASM Scanner",
  "main": "scanner.js",
  "scripts": {
    "start": "node scanner.js",
    "test": "node scanner.js view_key",
    "test-seed": "node scanner.js seed_phrase",
    "enhanced": "node enhanced_scanner.js",
    "enhanced-demo": "node enhanced_scanner.js \"abandon abandon abandon abandon abandon abandon abandon abandon abandon abandon abandon about\"",
    "build-wasm": "cd ../.. && wasm-pack build --target nodejs --out-dir examples/wasm/pkg ",
    "build-enhanced": "cd ../.. && wasm-pack build --target web --out-dir examples/wasm/pkg --features wasm,http",
    "setup": "npm run build-wasm",
    "setup-enhanced": "npm run build-enhanced",
    "serve": "python3 -m http.server 8080 || python -m SimpleHTTPServer 8080"
  },
  "keywords": [
    "tari",
    "blockchain",
    "wallet",
    "scanner",
    "wasm",
    "cryptocurrency"
  ],
  "author": "Tari Project",
  "license": "BSD-3-Clause",
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {},
  "devDependencies": {},
  "repository": {
    "type": "git",
    "url": "https://github.com/tari-project/tari-wallet.git",
    "directory": "examples/wasm"
  },
  "readme": "README.md"
} 